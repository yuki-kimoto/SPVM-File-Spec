class File::Spec {
  
  interface File::Spec::Interface;
  
  use Sys;
  use File::Spec::Unix;
  use File::Spec::Win32;
  
  static method new : File::Spec () {
    
    my $self : File::Spec;
    
    if (Sys->defined("_WIN32")) {
      $self = File::Spec::Win32->new;
    }
    else {
      $self = File::Spec::Unix->new;
    }
    
    return $self;
  }
  
  method has_interfaces : int () { return 1; }
}
